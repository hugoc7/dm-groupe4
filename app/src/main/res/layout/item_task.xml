<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1"
        android:scaleY="1"
        android:translationY="7dp"
        app:srcCompat="@android:drawable/radiobutton_off_background"
        tools:layout_conversion_absoluteHeight="51dp"
        tools:layout_conversion_absoluteWidth="2dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_conversion_absoluteHeight="56dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_conversion_absoluteWidth="298dp">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:maxWidth="258dp"
            android:textSize="24sp"
            android:translationX="5dp"
            tools:text="taches 1" />

        <TextView
            android:id="@+id/task_description"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:maxWidth="258dp"
            android:textSize="18sp"
            android:translationX="5dp"
            tools:text="description" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:layout_conversion_absoluteHeight="56dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_conversion_absoluteWidth="56dp" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        tools:layout_conversion_absoluteHeight="56dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="356dp"
        tools:layout_conversion_absoluteWidth="56dp" />

</LinearLayout>